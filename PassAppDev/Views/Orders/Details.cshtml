@{
	ViewData["Title"] = "Index";
}
@model IEnumerable<PassAppDev.Models.OrderedBook>


<h1>List of Orders Book Detail</h1>

<table class="table">
	<thead>
		<tr>
			<th scope="col">ID</th>
			<th scope="col">Order ID</th>
			<th scope="col">Book ID</th>
			<th scope="col">Quantity</th>
			<th scope="col">Price</th>
			<th scope="col">Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<th scope="row">@item.Id</th>
				<td>@item.OrderId</td>
				<td>@item.BookId</td>
				<td>@item.Quantity</td>
				<td>@item.Price</td>
				<td>
					<a asp-controller="Orders" asp-action="Details" asp-route-id=@item.Order class="btn btn-success">
						Details
					</a>
				</td>
			</tr>

		}
	</tbody>
</table>
