@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<PassAppDev.Models.Order>

<h1>List of Orders</h1>
<form>
  <input type="text" name="keyWord" placeholder="Search by Category" />
  <button asp-controller = "Home" type="submit" class="btn btn-primary">Search</button>
  </form>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Order ID</th>
      <th scope="col">Customer ID</th>
      <th scope="col">Customer Name</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var item in Model){
      <tr>
      <th scope="row">@item.Id</th>
      <td>@item.ApplicationUserId</td>
      <td>@item.ApplicationUser.FullName</td>
      <td>
          <a asp-controller="Orders" asp-action="Details" asp-route-id=@item.Id class="btn btn-success"> 
          Details
        </a>
      </td>
    </tr>

  }
  </tbody>
</table>
