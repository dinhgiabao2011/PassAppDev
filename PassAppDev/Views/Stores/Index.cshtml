@{
	ViewData["Title"] = "Index";
}
@model IEnumerable<PassAppDev.Models.Order>

<h1 class="text-center text-capitalize" style="color: #034ea2; font-size:3.5vw;">List Of Orders</h1>

<table class="table">
	<thead>
		<tr>
			<th class="text-center" scope="col">Order ID</th>
			<th class="text-center" scope="col">Customer Name</th>
			<th class="text-center" scope="col">Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<th class="text-center" scope="row">@item.Id</th>
				<td class="text-center" >@item.ApplicationUser.FullName</td>
				<td class="text-center">
					<a asp-controller="Stores" asp-action="Details" asp-route-id=@item.Id class="btn btn-success">
						<i class="bi bi-eye"></i> Details
					</a>
				</td>
			</tr>

		}
	</tbody>
</table>
