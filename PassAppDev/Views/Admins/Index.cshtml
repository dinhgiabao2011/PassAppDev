<h1>Pending Categories</h1>
<table class="table">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Name</th>
			<th scope="col">Address</th>
			<th scope="col">Status</th>
			<th scope="col">Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<th scope="row">@item.Id</th>
				<td>@item.FullName</td>
				<td>@item.Address</td>
				<td>@item.Status</td>
				
				<td>
					<a asp-controller="Admins" asp-action="Approve" asp-route-id=@item.Id class="btn btn-info">
						Approve
					</a>
					<a asp-controller="Admins" asp-action="Reject" asp-route-id=@item.Id class="btn btn-danger"
						 onclick="return confirm('Are you sure you want to delete this category: @item.Name?')">
						Reject
					</a>
				</td>
			</tr>
		}

	</tbody>
</table>
