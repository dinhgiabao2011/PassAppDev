@using PassAppDev.Utils
@{
    ViewData["Title"] = "Home Page";
}


<h1 class="text-center text-capitalize" style="color: #034ea2; font-size:3.5vw;">List Of Customers</h1>
<table class="table">
	<thead>
		<tr>
			<th class="text-center" scope="col">Customer Email</th>
			<th class="text-center" scope="col">Customer Name</th>
			<th class="text-center" scope="col">Customer Address</th>
			<th class="text-center" scope="col">Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<th class="text-center" scope="row">@item.UserName</th>
				<td class="text-center">@item.Email</td>
				<td class="text-center">@item.Address</td>
				<td class="text-center"><a asp-controller="Admins" asp-action="ChangeCustomerPassword" asp-route-id=@item.Id class="btn btn-primary"> 
				 <i class="bi bi-pencil-square"></i> Change Password
				</a></td>
			</tr>
		}

	</tbody>
</table>
