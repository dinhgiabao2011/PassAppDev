<h1 class="text-center text-capitalize" style="color: #034ea2; font-size:3.5vw;">List Of Approved Categories</h1>
<a asp-controller="Admins" asp-action="Index" class="btn btn-info" style="margin-bottom:2%; margin-left:80%;"> 
    <i class="bi bi-eye"></i> Pending Categories
</a>
<table class="table">
	<thead>
		<tr>
			<th class="text-center"  scope="col">#</th>
			<th class="text-center"  scope="col">Name</th>
			<th class="text-center" scope="col">Created At</th>
			<th class="text-center"  scope="col">Status</th>
			<th class="text-center"  scope="col">Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<th class="text-center"  scope="row">@item.Id</th>
				<td class="text-center" >@item.Name</td>
				<td class="text-center" >@item.CreatedAt</td>
				<td class="text-center" >@item.Status</td>

				<td class="text-center" >
					<a asp-controller="Admins" asp-action="Delete" asp-route-id=@item.Id class="btn btn-danger"
						 onclick="return confirm('Are you sure you want to delete this category: @item.Name?')">
						<i class="bi bi-trash"></i> Delete
					</a>
				</td>
			</tr>
		}

	</tbody>
</table>