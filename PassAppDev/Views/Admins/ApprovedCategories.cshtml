<h1>Approved Categories</h1>
<table class="table">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Name</th>
			<th scope="col">Created At</th>
			<th scope="col">Status</th>
			<th scope="col">Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<th scope="row">@item.Id</th>
				<td>@item.Name</td>
				<td>@item.CreatedAt</td>
				<td>@item.Status</td>

				<td>
					<a asp-controller="Admins" asp-action="Delete" asp-route-id=@item.Id class="btn btn-danger"
						 onclick="return confirm('Are you sure you want to delete this category: @item.Name?')">
						Delete
					</a>
				</td>
			</tr>
		}

	</tbody>
</table>