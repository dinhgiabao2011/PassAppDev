<h1 class="text-center text-capitalize" style="color: #034ea2; font-size:4vw;">List of book in store</h1>


<div class="form-group d-flex justify-content-between">
    <div class="form-group">
        <a asp-controller="Books" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-book h5"></i> New Book
        </a>
    </div>
    <div >
        <form asp-controller="Books" asp-action="Index" method="GET"
              style="margin-right:2vw;" class="d-flex justify-content-between">
            <input class="form-control d-flex justify-content-around" type="text" name="keyWord" placeholder="Search book" />
            <button class="search-btn" type="submit"><i class="bi bi-search-heart"></i></button>
        </form>
    </div>
</div>

<table class="table text-center">
    <thead>
        <tr>

            <th scope="col">Book Title</th>
            <th scope="col">Price</th>
            <th scope="col">Category</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Price</td>
                <td>@item.Category.Name</td>
                <td>
                    <a asp-controller="Books" asp-action="Details" asp-route-id=@item.Id class="btn btn-success" style="border-radius:8px;">
                        <i class="bi bi-eye"></i> View
                    </a>
                    <a asp-controller="Books" asp-action="Edit" asp-route-id=@item.Id class="btn btn-primary"  style="border-radius:8px;">
                      <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-controller="Books" asp-action="Delete" asp-route-id=@item.Id class="btn btn-danger"  style="border-radius:8px;" 
                   onclick="return confirm('Are you sure you want to delete this book: @item.Title?')">
                        <i class="bi bi-trash"></i> Delete
                    </a>

                </td>
            </tr>
        }

    </tbody>
</table>