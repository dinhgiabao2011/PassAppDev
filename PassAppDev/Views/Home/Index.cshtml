@model IEnumerable<PassAppDev.Models.Book>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
 <form>
      <input type="text" name="keyWord" placeholder="Search by Category" />
       <button type="submit" class="btn btn-primary">Search</button>
       </form>
	<a asp-controller="Categories" asp-action="Index" class="btn btn-info">
		Manage Categories
	</a>
	<a asp-controller="Books" asp-action="Index" class="btn btn-info">
		Manage Books
	</a>
	<a asp-controller="CartBooks" asp-action="Index" class="btn btn-info">
		Shopping Cart
	</a>
	<a asp-controller="Orders" asp-action="Index" class="btn btn-info">
		View List of Orders (For Customer)
	</a>
	<a asp-controller="Stores" asp-action="Index" class="btn btn-info">
		View List of Orders (For Store Owner)
	</a>
</div>

@foreach (var item in Model)
{
<div class="card" style="width:200px">
  <img 
    class="card-img-top" 
    src="@ViewBag.ImageData" 
    alt="Todo image">
	<div class="card-body">
		<h4 class="card-title">@item.Title</h4>
		<a asp-controller="Home" asp-action="BookDetails" asp-route-id=@item.Id class="btn btn-info">
			Details
		</a>
	</div>
</div>
}
